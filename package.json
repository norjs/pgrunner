{
  "name": "nor-pgrunner",
  "version": "1.0.0",
  "description": "PostgreSQL Database Server Runner",
  "main": "src/index.js",
  "bin": {
    "nor-pgrunner": "./src/bin/pgrunner.js"
  },
  "scripts": {
    "test": "npm run test-spec",
    "test-dot": "mocha -t 30000 -u bdd -c -R dot tests/test-*.js",
    "test-list": "mocha -t 30000 -u bdd -c -R list tests/test-*.js",
    "test-spec": "mocha -t 30000 -u bdd -c -R spec tests/test-*.js",
    "test-progress": "mocha -t 30000 -u bdd -c -R progress tests/test-*.js",
    "test-min": "mocha -t 30000 -u bdd -c -R min tests/test-*.js",
    "test-markdown": "mocha -t 30000 -u bdd -c -R markdown tests/test-*.js",
    "build-tests.md": "npm run test-markdown > tests.md",
    "lint": "node-lint src/ --config=lint.json",
    "jshint": "jshint src/"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/sendanor/nor-pgrunner.git"
  },
  "author": "Juho Juopperi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sendanor/nor-pgrunner/issues"
  },
  "homepage": "https://github.com/sendanor/nor-pgrunner",
  "dependencies": {
    "q"         : "^1.0.1",
    "merge"     : "^1.1.3",
    "temp"      : "^0.8.3",
    "nor-fs"    : "^1.0.0",
    "nor-is"    : "^1.0.0",
    "nor-debug" : "^1.0.0",
    "optimist"  : "^0.6.1",
    "rimraf"    : "^2.2.8"
  },
  "devDependencies": {
    "lint": "^1.1.2",
    "jshint": "^2.9.2",
    "mocha": "^1.16.2"
  }
}
